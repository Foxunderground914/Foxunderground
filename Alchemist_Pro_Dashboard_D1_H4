//@version=5
indicator("Alchemist Pro - Dashboard D1, H4 ", overlay=true)

// === Trend logika (Dual LR) ===
f_getTrend() =>
    prevBullish = close[1] > open[1]
    prevBearish = close[1] < open[1]
    aShape = prevBullish and close < open
    vShape = prevBearish and close > open
    var float aLevel = na
    var float vLevel = na
    var bool bullTrend = false
    var bool bearTrend = false
    if aShape
        aLevel := close[1]
    if vShape
        vLevel := close[1]
    if not na(aLevel) and close > aLevel
        bullTrend := true
        bearTrend := false
    if not na(vLevel) and close < vLevel
        bullTrend := false
        bearTrend := true
    [bullTrend, bearTrend]

// === Trend lekÃ©rÃ©se szimbÃ³lumra ===
getTrend(sym) =>
    [bull4h, bear4h] = request.security(sym, "240", f_getTrend())
    [bull1d, bear1d] = request.security(sym, "D", f_getTrend())
    t4h = bull4h ? "ðŸ“ˆ" : bear4h ? "ðŸ“‰" : "âž–"
    t1d = bull1d ? "ðŸ“ˆ" : bear1d ? "ðŸ“‰" : "âž–"
    [t4h, t1d]

// === TÃ¡blÃ¡zatsor kitÃ¶ltÅ‘ fÃ¼ggvÃ©ny ===
fillRow(sym, row, t1d, t4h, currentSymbol, t) =>
    displaySym = str.replace(str.replace(sym, "FOREXCOM:", ""), "SAXO:", "")
    label = currentSymbol == sym ? "ðŸ”¸ " + displaySym : displaySym
    table.cell(t, 0, row, label)
    table.cell(t, 1, row, t1d, text_color=t1d=="ðŸ“ˆ"?color.green:t1d=="ðŸ“‰"?color.red:color.gray)
    table.cell(t, 2, row, t4h, text_color=t4h=="ðŸ“ˆ"?color.green:t4h=="ðŸ“‰"?color.red:color.gray)
    // oszlop 3 (H1) Ã©s 4 (M15) Ã¼resen hagyva

